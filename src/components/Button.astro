---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "rounded-full px-6 p-2 font-semibold transition transform hover:-translate-y-1 uppercase";

const variantClasses = {
  primary: "bg-red-600 hover:bg-red-700 text-white",
  secondary: "border-2 border-red-600 hover:border-red-700 text-red-600 hover:text-red-700",
};

const sizeClasses = {
  large: "text-3xl",
  medium: "text-2xl",
  small: "text-lg",
};
---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot button /></button>
